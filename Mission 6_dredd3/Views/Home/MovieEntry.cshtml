@model MoveEntryModel.Models.MovieEntry;
<!--Movie Info input form-->
<h3>Enter The Movie Information Here</h3>
<form method="post">
    <label>Rating</label>
    <select id="Rat" asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br />
    <label asp-for="Title">Title</label>
    <input id="Tit" asp-for="Title" /><br />
    <label asp-for="Year">Year</label>
    <input id="Yr" asp-for="Year" /><br />
    <label asp-for="Director">Director</label>
    <input id="Dir" asp-for="Director" /><br />

    <label asp-for="CategoryId">Category</label>
    <select asp-for="CategoryId" >
        <option value="">Select A Category</option>
        @foreach (Category c in ViewBag.Cat)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
    </select><br />

    <label asp-for="Edited">Edited</label>
    <input type="checkbox" id="Ed" asp-for="Edited" /><br />
    <label asp-for="LentTo">Lent To</label>
    <input id="Len" asp-for="LentTo" /><br />
    <label asp-for="Notes">Notes</label>
    <input id="Not" asp-for="Notes" /><br />
    <input id="btnsubmit" type="submit" value="Enter" />

    <div asp-validation-summary="All"></div>
</form>